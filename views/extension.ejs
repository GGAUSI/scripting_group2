</head>
<body>
    <div class="container">
        <%- include("./partials/navigation") %>
        <div class="content">
            <%- include("./partials/header") %>
            <div class="main-content">
                <h3>Extend Days</h3><br>
                <h1>Patient List</h1>
                <form>
                  <div class="patient">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" name="firstName" value="John" readonly>
                    
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" name="lastName" value="Doe" readonly>
                    
                    <label for="disease">Disease:</label>
                    <input type="text" id="disease" name="disease" value="Flu" readonly>
                    
                    <label for="day">Day:</label>
                    <input type="text" id="day" name="day" class="day" value="7" readonly>
                    
                    <span class="arrow" onclick="increaseDays(this)">↑</span>
                    <span class="arrow" onclick="decreaseDays(this)">↓</span>
                  </div>
                  <!-- Add more patient entries here -->
                </form> 
            <form>
            <div class="patient">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" value="John" readonly>
                
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" value="Doe" readonly>
                
                <label for="disease">Disease:</label>
                <input type="text" id="disease" name="disease" value="Flu" readonly>
                
                <label for="day">Day:</label>
                <input type="text" id="day" name="day" class="day" value="7" readonly>
                
                <span class="arrow" onclick="increaseDays(this)">↑</span>
                <span class="arrow" onclick="decreaseDays(this)">↓</span>
            </div>
            <!-- Add more patient entries here -->
            </form> 

            </div>
        </div>
        
    </div>
  

  <script>
    function increaseDays(element) {
      var dayInput = element.parentElement.querySelector('.day');
      var currentDay = parseInt(dayInput.value);
      dayInput.value = currentDay + 1;
    }

    function decreaseDays(element) {
      var dayInput = element.parentElement.querySelector('.day');
      var currentDay = parseInt(dayInput.value);
      if (currentDay > 0) {
        dayInput.value = currentDay - 1;
      }
    }
  </script>
</body>
</html>
